---
import { IoSend } from "solid-icons/io";
---

<div class="flex items-center bg-zinc-400 rounded p-2 gap-2">
	<input
		id="challengeTitleInput"
		type="text"
		class="outline-none flex-1 text-zinc-700 font-bold appearance-none disabled:cursor-not-allowed bg-zinc-200 rounded-full p-2"
		placeholder="Enter Title"
	/>
	<button
		id="submitChallengeTitle"
		type="submit"
		class="bg-blue-500 hover:bg-blue-600 hover:cursor-pointer h-10 p-4 text-white font-bold flex items-center justify-center rounded-full disabled:bg-zinc-500 disabled:cursor-not-allowed"
	>
		<!-- <IoSend class="text-white" /> -->
		Go!
	</button>
</div>
