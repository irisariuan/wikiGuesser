---
import { AiOutlineLoading3Quarters } from "solid-icons/ai";
import MainLayout from "../../layout/MainLayout.astro";
import RedirectButtons from "../../components/RedirectButtons.astro";
---

<MainLayout>
	<script src="../../scripts/redirect.ts"></script>
	<div class="w-full h-full">
		<div
			id="astro-actions-loading"
			class="w-full h-full flex items-center justify-center gap-2"
		>
			<p class="text-center text-2xl font-bold" id="loading">
				Starting new game...
			</p>
			<AiOutlineLoading3Quarters class="animate-spin text-xl" />
		</div>
		<div
			id="astro-actions-success"
			style={{ display: "none" }}
			class="w-full h-full"
		>
			<a
				id="gameId"
				class="h-full w-full has-[span:hover]:bg-blue-500 has-[span:focus-within]:bg-blue-500 group flex items-center justify-center flex-col gap-4 transition-colors"
			>
				<span
					class="text-3xl font-bold text-blue-500 hover:text-white h-6 w-6"
					>Go!</span
				>
				<p
					id="extraInfo"
					class="text-lg text-blue-300 italic"
					style={{ display: "none" }}
				>
				</p>
				<p id="redirecting" class="text-lg text-blue-300 italic">
					Redirecting in 3 seconds...
				</p>
			</a>
		</div>
		<div
			id="astro-actions-error"
			style={{ display: "none" }}
			class="w-full h-full flex flex-col items-center justify-center gap-4"
		>
			<div>
				<p class="text-center text-red-700 mb-4 text-xl">
					Failed to start a new game. Please try again.
				</p>
				<button
					id="retryButton"
					class="text-white bg-red-500 py-2 px-4 rounded-xl w-full hover:cursor-pointer hover:bg-red-600 transition-colors hover:text-red-200"
					>Retry</button
				>
				<RedirectButtons />
			</div>
		</div>
	</div>
</MainLayout>
